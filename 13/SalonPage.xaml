<Page x:Class="_13.SalonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_13"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalonPage">

    <Grid>
        <StackPanel>

            <TextBlock Text="Дата приема" 
                HorizontalAlignment="Center" 
                FontSize="30"/>
            <DatePicker x:Name="dpdateService"/>
            <TextBlock Text="Имя клиента" 
                HorizontalAlignment="Center" 
                FontSize="30"/>
            <TextBox  x:Name="tbnameClient"
                />
            <TextBlock Text="Услуга" 
                HorizontalAlignment="Center" 
                FontSize="30"/>
            <ComboBox x:Name="cbservice" />
            <Button Name="btnAdd"
         Content="Добавить"
             FontSize="20"
             Margin="0 30" Click="btnAdd_Click"/>
        </StackPanel>
    </Grid>
</Page>
